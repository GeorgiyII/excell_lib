
<ConfigLabel@Label>:
    font_size: '15sp'
    halign: 'left'
    valign: 'middle'
    text_size: self.size


<ConfigTextInput@TextInput>:
    font_size: '15sp'



<BackgroundLabel@Widget>:
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos


<CustomLabel@Label+BackgroundLabel>
    background_color: 0.4, 0.4, 0.4, 1
    halign: 'center'
    valign: 'middle'
    text_size: self.size

<LoadExcelMenu>:
    rows: 3
    path: path
    sheet_name: sheet_name
    separator_symbol: separator_symbol
    price_sheet_name: price_sheet_name

    BoxLayout:
        padding: 20, 20, 20, 0
        size_hint: 0.9, 0.3
        CustomLabel:
            id: path
            text: 'Please add excel file'
            font_size: '15sp'

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        padding: [30, 30, 30, 30]
        GridLayout:
            rows: 2

            GridLayout:
                cols: 2

                BoxLayout:
                    orientation: 'vertical'

                    ConfigLabel:
                        text: 'Название страницы Excel с таблицей'

                    ConfigLabel:
                        text: 'Символ разделитель (по умолчанию < ; >)'

                    ConfigLabel:
                        text: 'Название страницы Excel с ценами и \n шифрами материалов'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.5, 1
                    padding: 0, 50, 0, 50
                    spacing: 80

                    ConfigTextInput:
                        id: sheet_name

                    ConfigTextInput:
                        id: separator_symbol

                    ConfigTextInput:
                        id: price_sheet_name


    BoxLayout:
        size_hint: 0.9, 0.2
        padding: 100, 0, 100, 20
        Button:
            text: 'Run'
            font_size: '20sp'
            on_press:
                path.text = root.go()



